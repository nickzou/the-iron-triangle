{
  "name": "modern-wp-boilerplate",
  "version": "1.0.0",
  "description": "A modern WordPress boilerplate",
  "license": "ISC",
  "author": "",
  "type": "commonjs",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "env:update": "wp-env start --update",
    "env:start": "wp-env start",
    "env:stop": "wp-env stop",
    "env:clean": "wp-env clean all",
    "env:destroy": "wp-env destroy",
    "tailwind:dev": "npx @tailwindcss/cli -i ./tailwind.css -o ./web/wp-content/themes/base-theme/css/tailwind.css",
    "tailwind:prod": "npx @tailwindcss/cli -i ./tailwind.css -o ./web/wp-content/themes/base-theme/css/tailwind.css -m",
    "tailwind:watch": "npx @tailwindcss/cli -i ./tailwind.css -o ./web/wp-content/themes/base-theme/css/tailwind.css -w",
    "php:format": " ./vendor/bin/php-cs-fixer fix ./web/wp-content/themes/base-theme/",
    "php:format:watch": "chokidar './web/wp-content/themes/**/*.php' -c './vendor/bin/php-cs-fixer fix {path}'",
    "php:lint": "esrun phplint.mjs",
    "php:lint:watch": "chokidar './web/wp-content/themes/base-theme/**/*.php' -i '{vendor}' -c 'php -l {path}'",
    "ts:dev": "esrun esbuild.config.mjs",
    "ts:prod": "esrun esbuild.prod.mjs",
    "ts:watch": "esrun esbuild.watch.mjs",
    "ts:typecheck": "tsc --noEmit --project tsconfig.json",
    "ts:typecheck:watch": "chokidar ./src/ts/ -c 'npm run ts:typecheck'",
    "biome": "biome check --write",
    "biome:watch": "chokidar './src/**/*' -c 'biome check {path} --write'",
    "browsersync": "browser-sync start --no-open -p 'localhost:8888' -f 'web/**/*'",
    "lightningcss:dev": "lightningcss ./src/css/** --output-dir ./web/wp-content/themes/base-theme/css/ --sourcemap --bundle --targets \">= 0.25%\"",
    "lightningcss:prod": "lightningcss ./src/css/** --output-dir ./web/wp-content/themes/base-theme/css/ --minify --bundle --targets \">= 0.25%\"",
    "lightningcss:watch": "chokidar './src/css/**/*.css' -c 'lightningcss --sourcemap --bundle --targets \">= 0.25%\" {path} -o ./web/wp-content/themes/base-theme/css/$(basename {path})'",
    "dev": "npm run tailwind:dev && npm run lightningcss:dev && npm run biome && npm run ts:typecheck && npm run ts:dev",
    "prod": "npm run tailwind:prod && npm run lightningcss:prod && npm run biome && npm run ts:typecheck && npm run ts:prod",
    "watch": "concurrently -k --names 'Tailwind,CSS,TypeScript,TS Typecheck,Biome,PHP Format, PHP Lint, BrowserSync' --prefixColors '#0EA5E9,#f9bb03,#167ECE,#FF584C,#64A8F9,#4F5B93,#4F5B93,#F34D4D' 'npm run tailwind:watch' 'npm run lightningcss:watch' 'npm run ts:watch' 'npm run ts:typecheck:watch' 'npm run biome:watch' 'npm run php:format:watch' 'npm run php:lint:watch' 'npm run browsersync'"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@prettier/plugin-php": "^0.22.4",
    "@wordpress/env": "^10.18.0",
    "browser-sync": "^3.0.3",
    "chokidar-cli": "^3.0.0",
    "concurrently": "^9.1.2",
    "dotenv": "^16.4.7",
    "esbuild": "^0.25.0",
    "esrun": "^3.2.26",
    "glob": "^11.0.1",
    "lightningcss-cli": "^1.29.1",
    "prettier": "^3.5.2",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "typescript": "^5.7.3"
  },
  "dependencies": {
    "@tailwindcss/cli": "^4.0.8",
    "alpinejs": "^3.14.8",
    "tailwindcss": "^4.0.8"
  }
}
