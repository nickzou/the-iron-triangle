{
  "name": "modern-wp-boilerplate",
  "version": "1.0.0",
  "description": "A modern WordPress boilerplate",
  "license": "ISC",
  "author": "",
  "type": "commonjs",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "env:update": "wp-env start --update",
    "env:start": "wp-env start",
    "env:stop": "wp-env stop",
    "env:clean": "wp-env clean all",
    "env:destroy": "wp-env destroy",
    "tailwind": "npx @tailwindcss/cli -i ./tailwind.css -o ./web/wp-content/themes/base-theme/css/tailwind.css",
    "tailwind:watch": "npx @tailwindcss/cli -i .tailwind.css -o ./web/wp-content/themes/base-theme/css/tailwind.css",
    "php:format-check": "prettier . --check",
    "php:format": "prettier . --write",
    "php:watch": "chokidar './web/wp-content/themes/**/*.php' -c 'prettier {path} --write'"
  },
  "devDependencies": {
    "@prettier/plugin-php": "^0.22.4",
    "@wordpress/env": "^10.18.0",
    "chokidar-cli": "^3.0.0",
    "prettier": "^3.5.2",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "typescript": "^5.7.3"
  },
  "dependencies": {
    "@tailwindcss/cli": "^4.0.8",
    "tailwindcss": "^4.0.8"
  }
}
